{
    "id": "de.haeckerfelix.Shortwave.Devel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm18"
    ],
    "command": "shortwave",
    "tags": [
        "nightly"
    ],
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd",
        "--filesystem=xdg-music",
        "--env=RUST_LOG=shortwave,cast_sender=debug",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm18/bin",
        "env": {
            "RUSTFLAGS": "-C force-frame-pointers=yes -C symbol-mangling-version=v0 -C linker=clang -C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold"
        },
        "build-args": [
            "--share=network"
        ]
    },
    "modules": [
        {
            "name": "glycin-loaders",
            "buildsystem": "meson",
            "config-opts": [
                "-Dglycin-loaders=true",
                "-Dlibglycin=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/sophie-h/glycin.git",
                    "tag": "1.1.0"
                }
            ]
        },
        {
            "name": "libshumate",
            "buildsystem": "meson",
            "config-opts": [
                "--libdir=/app/lib",
                "-Dgir=false",
                "-Dvapi=false",
                "-Dgtk_doc=false",
                "-Ddemos=false",
                "-Dvector_renderer=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libshumate.git",
                    "branch": "libshumate-1-3"
                }
            ]
        },
        {
            "name": "shortwave",
            "buildsystem": "meson",
            "run-tests": true,
            "config-opts": [
                "-Dprofile=development"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}